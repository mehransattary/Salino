@model Salino.Models.gifcardDate

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Content/DateShamsi/MdBootstrapPersianDateTimePicker/jquery.Bootstrap-PersianDateTimePicker.css" rel="stylesheet" />
<section class="content-header">
    <h1 style="margin-bottom:15px">
        کدهای تخفیف زمان دار

    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Default/Index"><i class="fa fa-dashboard"></i> مدیریت</a></li>
        <li class="active"><a href="/Admin/gifcardDates/Index">        کدهای تخفیف زمان دار</a></li>
        <li class="active">ویرایش تخفیف @Model.Code</li>
    </ol>
</section>
<div class="box box-info container">


    @using (Html.BeginForm("Edit", "gifcardDates"))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.CreateDate)
        @Html.HiddenFor(x => x.CreateDateShamsi)


        <div class="form-horizontal">
            <h4>ویرایش تخفیف @Model.Code</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                </div>
            </div>

            <hr />

            <div class="form-group">
                @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="">
                        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <hr />

            <div class="form-group">
                @Html.LabelFor(model => model.NumberUse, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="">
                        @Html.EditorFor(model => model.NumberUse, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NumberUse, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <hr />
            

            <div class="form-group">
                <label class="col-md-2" for="ExpirationDateShamsiedit">تاریخ انقضا</label>
                <div class="col-md-10">
                    تاریخ انقضا جاری :@Model.ExpirationDateShamsi
                    <div class="input-group-addon col-3" data-mddatetimepicker="true" data-trigger="click" data-targetselector="#ExpirationDateShamsiedit" data-mdpersiandatetimepicker="" data-enabletimepicker="false" data-mdpersiandatetimepickerselecteddatetime="{&quot;Year&quot;:1398,&quot;Month&quot;:1,&quot;Day&quot;:22,&quot;Hour&quot;:0,&quot;Minute&quot;:0,&quot;Second&quot;:0}" style="cursor: pointer;" data-original-title="" title="" data-mdpersiandatetimepickershowing="false">
                        <span class="fa fa-calendar fa-2x" style="cursor:pointer"></span>
                    </div>
                    <input name="ExpirationDateShamsi" type="text" style="border: 1px solid blue;" class="form-control col-7" readonly="readonly" id="ExpirationDateShamsiedit" placeholder="از تاریخ..." data-mddatetimepicker="true" data-placement="right" data-mdpersiandatetimepicker="" data-trigger="focus" data-enabletimepicker="false" data-mdpersiandatetimepickerselecteddatetime="{&quot;Year&quot;:1398,&quot;Month&quot;:1,&quot;Day&quot;:22,&quot;Hour&quot;:0,&quot;Minute&quot;:0,&quot;Second&quot;:0}" data-original-title="" title="" data-mdpersiandatetimepickershowing="true">

                </div>

            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button class="btn btn-social btn-success" type="submit">
                        <i class="fa fa-save"></i> ویرایش
                    </button>
                    <a class="btn btn-social btn-pinterest" href="/Admin/gifcardDates/index">
                        <i class="fa fa-backward"></i> بازگشت
                    </a>
                </div>
            </div>
        </div>
    }


</div>
@section scripts{

    <script src="~/Content/DateShamsi/MdBootstrapPersianDateTimePicker/jalaali.js"></script>
    <script src="~/Content/DateShamsi/MdBootstrapPersianDateTimePicker/jquery.Bootstrap-PersianDateTimePicker.js"></script>
    <script>
        $("#ExpirationDateShamsiedit").MdPersianDateTimePicker({
            TargetSelector: '#ExpirationDateShamsiedit',
        EnglishNumber: true
    });
    </script>
}