@model IEnumerable<Salino.Models.MajorShop>
@using Salino.ToShamsi
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int counter = 1;
}

<section class="content-header">
    <h1>
        صفحه اصلی
        <a class="btn btn-app" href="/Admin/MajorShops/Create">
            <i class="fa fa-hand-pointer-o"></i> خرید عمده جدید
        </a>
        <a class="btn btn-app" href="/Admin/MajorShops/Index">
            <i class="fa fa-repeat"></i> به روزرسانی
        </a>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Default/Index"><i class="fa fa-dashboard"></i> مدیریت</a></li>
        <li class="active"><a href="/Admin/MajorShops/Index">  خرید عمده</a></li>
    </ol>
</section>

<section class="content  ">

    <div class="row">
        <div class="col-xs-12">
            <div class="box box box-info">
                <div class="box-header">
                    <h3 class="box-title"> خرید عمده</h3>

                    <div class="box-tools">
                      
                    </div>

                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th>شماره</th>
                                <th>حداقل تعداد انتخاب طرح</th>
                                <th>تعداد هر طرح</th>
                                <th>نوع پارچه</th>
                                <th>قیمت عمده</th>
                                <th>تاریخ ایجاد</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr role="row" class="table-striped table-hover">
                                    <td class="sorting_1">@counter</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MinSelectedProduct)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Count)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FarbicType.tiltle)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PriceMajor)
                                    </td>
                                    <td>
                                       @item.Createdate.ToString().ToShamsi()
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-info btn-flat dropdown-toggle" data-toggle="dropdown">عملیات</button>
                                            <button type="button" class="btn btn-info btn-flat dropdown-toggle" data-toggle="dropdown">
                                                <span class="caret"></span>
                                                <span class="sr-only">Toggle Dropdown</span>
                                            </button>
                                            <ul class="dropdown-menu" role="menu">
                                                <li>@Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn btn-block btn-danger btn-flat", @style = "color:white" })</li>
                                                <li>@Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new { @class = "btn btn-block btn-info btn-flat", @style = "color:white" })</li>
                                                <li>
                                                    @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-block btn-warning btn-flat", @style = "color:white" })



                                                </li>

                                            </ul>
                                        </div>

                                    </td>

                                </tr>
                                counter++;
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

</section>
