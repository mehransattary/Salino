@model IEnumerable<Salino.Models.Setting>
@using Salino.DataLayer;
@{
    SalinoContext db = new SalinoContext();
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int counter = 1;
}


<section class="content-header">
    <h1>
     تنظیمات
        @if (db.Settings.Count() < 1)
        {
            <a class="btn btn-app" href="/Admin/Settings/Create">
                <i class="fa fa-hand-pointer-o"></i>      تنظیمات جدید
            </a>
        }
    
        <a class="btn btn-app" href="/Admin/Settings/Index">
            <i class="fa fa-repeat"></i> به روزرسانی
        </a>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Default/Index"><i class="fa fa-dashboard"></i> مدیریت</a></li>
        <li class="active"><a href="/Admin/Settings/Index"> تنظیمات</a></li>
    </ol>
</section>

<section class="content  " id="GroupProducts">

    <div class="row">
        <div class="col-xs-12">
            <div class="box box box-info">
                <div class="box-header">
                    <h3 class="box-title"> تنظیمات</h3>

                    <div class="box-tools">
                     
                    </div>

                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th>شماره</th>
                                <th>برندفوتر</th>
                                <th>برند اصلی</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr role="row" class="table-striped table-hover">
                                    <td class="sorting_1">@counter</td>
                                  <td>
                                      <img src="~/Content/imgsetting/@item.imageSrc" alt="@item.imageSrc " class="img-thumbnail" style="border:1px solid ;width:120px;height:120px;" />
                                  </td>
                                    <td>
                                        <img src="~/Content/imgsetting/@item.imageSrcMain" alt="@item.imageSrcMain " class="img-thumbnail" style="border:1px solid ;width:120px;height:120px;" />
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-info btn-flat dropdown-toggle" data-toggle="dropdown">عملیات</button>
                                            <button type="button" class="btn btn-info btn-flat dropdown-toggle" data-toggle="dropdown">
                                                <span class="caret"></span>
                                                <span class="sr-only">Toggle Dropdown</span>
                                            </button>
                                            <ul class="dropdown-menu" role="menu">
                                                <li>@Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn btn-block btn-danger btn-flat", @style = "color:white" })</li>
                                                <li>@Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new { @class = "btn btn-block btn-info btn-flat", @style = "color:white" })</li>
                                                <li>
                                                    @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-block btn-warning btn-flat", @style = "color:white" })



                                                </li>

                                            </ul>
                                        </div>

                                    </td>

                                </tr>
                                counter++;
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

</section>
