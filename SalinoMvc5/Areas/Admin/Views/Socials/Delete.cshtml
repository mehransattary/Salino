@model Salino.Models.Social

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1 style="margin-bottom:15px">
        شبکه اجتماعی

    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Default/Index"><i class="fa fa-dashboard"></i> مدیریت</a></li>
        <li class="active">    شبکه اجتماعی</li>
        <li class="active">حذف     شبکه اجتماعی @Model.SocialName</li>
    </ol>
</section>

<div class="box box-info container">
    <div>
        <h3>آیا  ازحذف     شبکه اجتماعی @Model.SocialName مطمئن هستید؟ </h3>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.SocialName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SocialName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SocialIcon)
            </dt>

            <dd>
                <img src="~/Content/imgsocial/@Model.SocialIcon" alt="@Model.SocialIcon " class="img-responsive img-thumbnail" style="border:1px solid ;width:120px;height:120px;" />
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SocialLink)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SocialLink)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NotShow)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NotShow)
            </dd>

         

        </dl>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">

                        <button class="btn btn-social btn-success" type="submit">
                            <i class="fa fa-save"></i> حذف
                        </button>
                        <a class="btn btn-social btn-pinterest" href="/Admin/Socials/index">
                            <i class="fa fa-backward"></i> بازگشت
                        </a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
