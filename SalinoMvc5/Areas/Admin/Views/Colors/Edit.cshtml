@model Salino.Models.Color

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}





<section class="content-header">
    <h1 style="margin-bottom:15px">
        رنگ ها

    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Default/Index"><i class="fa fa-dashboard"></i> مدیریت</a></li>
        <li class="active"> <a href="/Admin/Colors/Index">         رنگ ها</a></li>
        <li class="active">ویرایش   رنگ  @Model.color</</li>
    </ol>
</section>

<div class="box box-info container">

    <form action="/Admin/Colors/Edit" method="post">



        @Html.HiddenFor(x => x.Id)
        <div class="form-horizontal">
            <h4>ویرایش   رنگ @Model.color</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.color, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">

                    <input name="color" value="@Model.color" class="form-control" />
                    @Html.ValidationMessageFor(model => model.color, "", new { @class = "text-danger" })
                </div>
            </div>



            <hr />
            <hr />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button class="btn btn-social btn-success" type="submit">
                        <i class="fa fa-save"></i> ویرایش
                    </button>
                    <a class="btn btn-social btn-pinterest" href="/Admin/Colors/index">
                        <i class="fa fa-backward"></i> بازگشت
                    </a>
                </div>
            </div>
        </div>

    </form>


</div>
