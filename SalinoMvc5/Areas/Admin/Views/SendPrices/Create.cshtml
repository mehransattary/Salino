@model Salino.Models.SendPrice
@using  Salino.ToShamsi()
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1 style="margin-bottom:15px">
        ارسال پست رایگان

    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Default/Index"><i class="fa fa-dashboard"></i> مدیریت</a></li>
        <li class="active"><a href="/Admin/SendPrices/Index">  ارسال پست رایگان     </a></li>  
        <li class="active">ارسال پست رایگان جدید</li>
    </ol>
</section>
<div class="box box-info container">


    @using (Html.BeginForm("Create", "SendPrices"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>ارسال پست رایگان جدید</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    

            <div class="form-group">
                @Html.LabelFor(model => model.AsNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="">
                        @Html.EditorFor(model => model.AsNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AsNumber, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <hr />


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button class="btn btn-social btn-success" type="submit">
                        <i class="fa fa-save"></i> ذخیره
                    </button>
                    <a class="btn btn-social btn-pinterest" href="/Admin/SendPrices/index">
                        <i class="fa fa-backward"></i> بازگشت
                    </a>
                </div>
            </div>
        </div>

    }

</div>