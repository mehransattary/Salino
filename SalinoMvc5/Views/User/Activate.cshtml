@model Salino.ViewModels.ActivateCodeViewModel
@{
    ViewBag.Title = "Active";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/sweetalert/sweetalert.min.js"></script>
<div class="container reg " style="font-family: IRANSans;">


    <nav aria-label="breadcrumb" style="direction:rtl;font-family: IRANSans;text-align-last:center ; text-align-last: center;
              box-shadow: 0 0 11px 0 #131212; background: #f89721e6;  box-shadow: 0 0 19px 0 #ed2124 inset;  ">
        <ol class="breadcrumb" style="background: none;    display: block;">
            <li class="breadcrumb-item"><a href="/">صفحه اصلی</a></li>
            <li class="breadcrumb-item active" aria-current="page" style="color: #212529;">کدفعالسازی</li>
        </ol>

    </nav>


    <div class="login" style="direction:rtl">

        <h2 style="text-align: center;font-family: IRANSans">کدفعالسازی </h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="alert-info">
                    <p style="text-align: center;">کد فعالسازبه شماره  @ViewBag.mobile ارسال شد.</p>
                </div>
                <div class="row">
                    <div class="form-group col-md-12 col-lg-12 col-sm-12 col-xs-12">
                        @Html.LabelFor(model => model.UserCode, htmlAttributes: new { @class = "control-label col-md-3", @style = "display: flex;    text-align: right;" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.UserCode, new { htmlAttributes = new { @class = "form-control", @style = "font-size: 15px;" } })
                            @Html.ValidationMessageFor(model => model.UserCode, "", new { @class = "text-danger " })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12 col-lg-12 col-sm-12 col-xs-12">
                        <div class="col-md-3">

                        </div>
                        <div class="col-md-9">
                            <input type="submit" value="فعالسازی" class="btn btn-block   btnregister" style="float: left;" />
                        </div>
                    </div>
                </div>

                @if (ViewBag.MessageForUser23 != null)
                {
                    <div class="alert-warning">
                        <p style="text-align:center">@ViewBag.MessageForUser23</p>
                    </div>
                }



            </div>


        }
    </div>

</div>

